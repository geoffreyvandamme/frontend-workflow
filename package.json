{
  "name": "frontend-workflow",
  "version": "0.16.4",
  "description": "Frontend workflow using Webpack 4",
  "author": "Yulian Alexeyev <yulian@dev-q.be> (https://github.com/ioulian)",
  "keywords": [
    "css",
    "js",
    "webpack",
    "typescript",
    "post-css",
    "prettier",
    "nvm",
    "stylelint",
    "tslint",
    "editorconfig",
    "favicons",
    "bulma",
    "es6",
    "drupal",
    "drupal8"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ioulian/frontend-workflow",
  "repository": {
    "type": "git",
    "url": "git@github.com:ioulian/frontend-workflow.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "private": false,
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "dependencies": {
    "@fancyapps/fancybox": "3.5.7",
    "bulma": "0.7.5",
    "core-js": "3.1.3",
    "element-closest": "3.0.1",
    "element-matches-polyfill": "1.0.0",
    "intersection-observer": "0.7.0",
    "jquery": "3.4.1",
    "onfire.js": "2.0.1",
    "promise-polyfill": "8.1.0",
    "smoothscroll-polyfill": "0.4.4",
    "swiper": "4.5.0",
    "throttle-debounce": "2.1.0",
    "vanilla-lazyload": "12.0.0",
    "workbox-webpack-plugin": "4.3.1"
  },
  "scripts": {
    "start": "NODE_ENV=devserver npx webpack-dev-server --open --config webpack.dev.js",
    "start:d": "NODE_ENV=devserver webpack-dashboard -- npx webpack-dev-server --open --config webpack.dev.js",
    "watch": "npx webpack --watch --config webpack.dev.js",
    "build": "yarn lint && yarn export",
    "export": "NODE_ENV=production npx webpack --config webpack.prod.js",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "npx typescript --noEmit --project .tsconfig.json && npx tslint 'src/**/*.ts' -t verbose -c .tslint.json",
    "lint:css": "npx stylelint 'src/**/*.scss'"
  },
  "devDependencies": {
    "@csstools/postcss-sass": "4.0.0",
    "@types/swiper": "4.4.3",
    "@types/throttle-debounce": "1.1.1",
    "autoprefixer": "9.5.1",
    "clean-webpack-plugin": "2.0.2",
    "css-loader": "2.1.1",
    "cssnano": "4.1.10",
    "file-loader": "3.0.1",
    "friendly-errors-webpack-plugin": "1.7.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "imagemin-webpack-plugin": "2.4.2",
    "inline-manifest-webpack-plugin": "4.0.2",
    "mini-css-extract-plugin": "0.7.0",
    "node-sass": "4.12.0",
    "postcss-css-variables": "0.12.0",
    "postcss-easing-gradients": "3.0.1",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.6.0",
    "postcss-utilities": "0.8.1",
    "prettier": "1.17.1",
    "prettier-webpack-plugin": "1.2.0",
    "sass-loader": "7.1.0",
    "script-ext-html-webpack-plugin": "2.1.3",
    "script-loader": "0.7.2",
    "style-loader": "0.23.1",
    "stylelint": "10.0.1",
    "stylelint-config-standard": "18.3.0",
    "stylelint-scss": "3.6.1",
    "stylelint-webpack-plugin": "0.10.5",
    "ts-loader": "6.0.1",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-webpack-plugin": "2.0.4",
    "typescript": "3.4.5",
    "webapp-webpack-plugin": "2.7.0",
    "webpack": "4.32.2",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.2",
    "webpack-dashboard": "3.0.7",
    "webpack-dev-server": "3.4.1",
    "webpack-merge": "4.2.1",
    "webpack-plugin-critical": "1.0.0",
    "webpack-stream": "5.2.1"
  },
  "config": {
    "devServerHTTPS": true,
    "addFilenameHashes": true,
    "outputPath": "dist",
    "name": "Frontend workflow",
    "shortName": "Frontend",
    "description": "Frontend workflow description",
    "author": "Yulian Alexeyev",
    "authorUrl": "https://github.com/ioulian",
    "theme": "#00d1b2",
    "background": "#fff",
    "serviceWorkerOnLocalHost": false,
    "cms": {
      "active": false,
      "subFolder": "/themes/custom/fw2019/"
    },
    "modules": {
      "favicons": true,
      "criticalCSS": true,
      "serviceWorker": true,
      "asyncJS": true
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "ie >= 10",
    "not op_mini all"
  ]
}
